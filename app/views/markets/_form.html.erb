<%= form_for @market, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @market.errors.present? %>
    <div class="alert alert-error">
      <% @market.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <fieldset>
    <legend>Basic information</legened>
  </fieldset>

  <div class='row'>
    <div class='span4'>
      <div class="control-group">
        <%= f.label :name, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :name, :class => 'text_field input-medium' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :website, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :website, :class => 'text_field input-medium' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :hours_of_operation, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_area :hours_of_operation, :class => 'text_area input-medium' %>
        </div>
      </div>
    </div>

    <div class='span4'>
      <div class="control-group">
        <%= f.label :street, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :street, :class => 'text_field input-medium' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :city, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :city, :class => 'text_field input-medium' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :state, :class => 'control-label' %>
        <div class="controls">
          <%= f.subregion_select(:state, 'US',{priority: %w{GA}}, class: 'input-medium') -%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :zip, :class => 'control-label' %>
        <div class="controls">
          <%= f.number_field :zip, :class => 'number_field input-medium', :rows => '3' %>
        </div>
      </div>
    </div>
  </div>
      <div class="form-actions">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            markets_path, :class => 'btn' %>
      </div>
<% end %>
