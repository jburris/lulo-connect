<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) : "Grow Lulo" %></title>
  <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Grow Lulo" %>">

  <%= stylesheet_link_tag "application", :media => "all" %>

  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>

<body>
  <header class="navbar navbar-fixed-top">
    <nav class="navbar-inner">
      <div class="container">
        <%= render 'layouts/navigation' %>
      </div>
    </nav>
  </header>

  <%= render 'layouts/messages' %>

  <div id="main" role="main">
    <div class="container">
      <div class="content">

        <div class="row">
          <div class="span12">
            <%= render 'layouts/messages' %>
            <%= yield %>
          </div>
        </div>

        <footer>
        </footer>

      </div>
    </div> <!--! end of .container -->
  </div>

  <footer>
  </footer>
  <%= javascript_include_tag "application" %>
  <%= yield :footer_scripts -%>
</body>
</html>
