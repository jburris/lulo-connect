<%- model_class = Plant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:type) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:best_location) %></th>
      <th><%= model_class.human_attribute_name(:planting_instructions) %></th>
      <th><%= model_class.human_attribute_name(:harvest_instructions) %></th>
      <th><%= model_class.human_attribute_name(:plant_with) %></th>
      <th><%= model_class.human_attribute_name(:dont_plant_with) %></th>
      <th><%= model_class.human_attribute_name(:watering) %></th>
      <th><%= model_class.human_attribute_name(:pests) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= link_to plant.id, plant_path(plant) %></td>
        <td><%= plant.type %></td>
        <td><%= plant.name %></td>
        <td><%= plant.best_location %></td>
        <td><%= plant.planting_instructions %></td>
        <td><%= plant.harvest_instructions %></td>
        <td><%= plant.plant_with %></td>
        <td><%= plant.dont_plant_with %></td>
        <td><%= plant.watering %></td>
        <td><%= plant.pests %></td>
        <td><%=l plant.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_plant_path(plant), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      plant_path(plant),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
